{
  "manifest_version": 2,

  "name": "ATS Assistant",
  "description": "Highlight keywords likely to be used in the ATS (Applicant Tracking System) of a particular job listing.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://code.jquery.com https://cdnjs.cloudflare.com https://stackpath.bootstrapcdn.com; object-src 'self'",
  "permissions": [
    "tabs", "<all_urls>"
   ]
}